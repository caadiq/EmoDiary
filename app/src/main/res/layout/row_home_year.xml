<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutParent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rectangle_light_blue_rounded_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtYearAbbr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/nanum_square_neo_heavy"
        android:includeFontPadding="false"
        android:textColor="#AFCAFF"
        android:textSize="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtYearFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/nanum_square_neo_heavy"
        android:textColor="#739DF0"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/txtCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtYearAbbr"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="2024" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nanum_square_neo_bold"
        android:textColor="#739DF0"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtYearAbbr"
        app:layout_constraintStart_toStartOf="@+id/txtYearFull"
        app:layout_constraintTop_toBottomOf="@+id/txtYearFull"
        tools:text="100개의 기억들" />

</androidx.constraintlayout.widget.ConstraintLayout>